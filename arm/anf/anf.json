{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "netappAccountName": {
            "type": "String",
            "defaultValue": "sap-anf-acc1",
            "metadata": {
                "description": "The name of the Azure NetApp Files account."
            }
        },
        "capacityPoolName": {
            "type": "string",
            "defaultValue": "sap-pool-prem1",
            "metadata": {
                "description": "The name of the capacity pool."
            }
        },
        "capacityPoolTier": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Premium",
                "Ultra"
            ],
            "defaultValue": "Premium",
            "metadata": {
                "description": "The tier of the capacity pool."
            }
        },
        "capacityPoolSizeTb": {
            "type": "int",
            "minValue": 4,
            "maxValue": 100,
            "defaultValue": 4,
            "metadata": {
                "description": "The size in TB of the capacity pool."
            }
        }
    },
    "variables": {
        "capacityPoolSizeBytes": "[mul(mul(parameters('capacityPoolSizeTb'), 1073741824), 1024)]" // extra mul function to get around the limitation of PowerShell where an integer cannot be greater than 2147483647
    },
    "resources": [
        {
            "type": "Microsoft.NetApp/netAppAccounts",
            "apiVersion": "2019-07-01",
            "name": "[parameters('netappAccountName')]",
            "location": "[resourceGroup().location]",
            "properties": {}
        },
        {
            "type": "Microsoft.NetApp/netAppAccounts/capacityPools",
            "apiVersion": "2019-07-01",
            "name": "[concat(parameters('netappAccountName'), '/', parameters('capacityPoolName'))]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[parameters('netappAccountName')]"
            ],
            "properties": {
                "serviceLevel": "[parameters('capacityPoolTier')]",
                "size": "[variables('capacityPoolSizeBytes')]" 
            }
        }
    ]
}