{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sapSystemId": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3,
            "defaultValue": "HN1",
            "metadata": {
                "description": "The SAP system ID."
            }
        },
        "vnet": {
            "type": "string",
            "defaultValue": "sap-prod-vnet-1",
            "metadata": {
                "description": "Virtual network."
            }
        },
        "subnet": {
            "type": "string",
            "defaultValue": "sap-db-subnet",
            "metadata": {
                "description": "Subnet."
            }
        },
        "networkSecurityGroup": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Network security group to apply to the NIC. Leave blank if none."
            }
        },
        "publicIp": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Should a public IP address be deployed."
            }
        },
        "vmSize": {
            "type": "string",
            "allowedValues": [
                "Standard_DS14_v2",
                "Standard_E16s_v3",
                "Standard_E32s_v3",
                "Standard_E64s_v3",
                "Standard_GS5",
                "Standard_M32ts",
                "Standard_M32ls",
                "Standard_M64ls",
                "Standard_M64s",
                "Standard_M64ms",
                "Standard_M128s",
                "Standard_M128ms",
                "Standard_M208s_v2",
                "Standard_M208ms_v2",
                "Standard_M416s_v2",
                "Standard_M416ms_v2"
            ],
            "defaultValue": "Standard_E16s_v3",
            "metadata": {
                "description": "Virtual machine size. Also determines which disks will be attached."
            }
        },
        "role": {
            "type": "string",
            "defaultValue": "Production",
            "allowedValues": [
                "Production",
                "Non-production"
            ],
            "metadata": {
                "description": "This will affect the storage SKUs used."
            }
        }
    },
    "variables": {
        "repoPath": "https://raw.githubusercontent.com/dohughes-msft/sap/master/arm/disk/",
        "location": "[resourceGroup().location]",
        "label": "[concat('sap-', toLower(parameters('sapSystemId')))]",
        "ppgName": "[concat(variables('label'), '-ppg1')]",
        "avsetName": "[concat(variables('label'), '-db-avset1')]",
        "hostName": "[concat(variables('label'), '-db1')]",
        "nicName": "[concat(variables('hostName'), '-nic1')]",
        "pipName": "[concat(variables('hostName'), '-pip1')]",
        "pipId": {
            "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIPAddresses', variables('pipName'))]"
        },
        "vnetId": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks', parameters('vnet'))]",
        "subnetId": "[concat(variables('vnetId'), '/subnets/', parameters('subnet'))]",
        "nsgId": {
            "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroup'))]"
        },
        "storageSku": "[if(equals(parameters('role'), 'Production'), 'Premium_LRS', 'StandardSSD_LRS')]",
        "diskDeploymentName": "[concat(deployment().name, '_disk')]",
        "vmDiskTemplate": {
            "Standard_E16s_v3": {
                "Production": {
                    "templateFile": "disk_hana_nonprod_e16.json",
                    "diskCount": 6
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_e16.json",
                    "diskCount": 6
                }
            },
            "Standard_E32s_v3": {
                "Production": {
                    "templateFile": "disk_hana_nonprod_e32.json",
                    "diskCount": 6
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_e32.json",
                    "diskCount": 6
                }
            },
            "Standard_E64s_v3": {
                "Production": {
                    "templateFile": "disk_hana_nonprod_e64.json",
                    "diskCount": 6
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_e64.json",
                    "diskCount": 6
                }
            },
            "Standard_M32ts": {
                "Production": {
                    "templateFile": "disk_hana_prod_m32ts.json",
                    "diskCount": 8
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m32ts.json",
                    "diskCount": 6
                }
            },
            "Standard_M32ls": {
                "Production": {
                    "templateFile": "disk_hana_prod_m32ls.json",
                    "diskCount": 8
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m32ls.json",
                    "diskCount": 6
                }
            },
            "Standard_M64ls": {
                "Production": {
                    "templateFile": "disk_hana_prod_m64ls.json",
                    "diskCount": 8
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m64ls.json",
                    "diskCount": 6
                }
            },
            "Standard_M64s": {
                "Production": {
                    "templateFile": "disk_hana_prod_m64s.json",
                    "diskCount": 10
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m64s.json",
                    "diskCount": 6
                }
            },
            "Standard_M64ms": {
                "Production": {
                    "templateFile": "disk_hana_prod_m64ms.json",
                    "diskCount": 10
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m64ms.json",
                    "diskCount": 8
                }
            },
            "Standard_M128s": {
                "Production": {
                    "templateFile": "disk_hana_prod_m128s.json",
                    "diskCount": 9
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m128s.json",
                    "diskCount": 7
                }
            },
            "Standard_M128ms": {
                "Production": {
                    "templateFile": "disk_hana_prod_m128ms.json",
                    "diskCount": 13
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m128ms.json",
                    "diskCount": 9
                }
            },
            "Standard_M208s_v2": {
                "Production": {
                    "templateFile": "disk_hana_prod_m208s.json",
                    "diskCount": 11
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m208s.json",
                    "diskCount": 9
                }
            },
            "Standard_M208ms_v2": {
                "Production": {
                    "templateFile": "disk_hana_prod_m208ms.json",
                    "diskCount": 11
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m208ms.json",
                    "diskCount": 10
                }
            },
            "Standard_M416s_v2": {
                "Production": {
                    "templateFile": "disk_hana_prod_m416s.json",
                    "diskCount": 11
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m416s.json",
                    "diskCount": 10
                }
            },
            "Standard_M416ms_v2": {
                "Production": {
                    "templateFile": "disk_hana_prod_m416ms.json",
                    "diskCount": 16
                },
                "Non-Production": {
                    "templateFile": "disk_hana_nonprod_m416ms.json",
                    "diskCount": 10
                }
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Compute/proximityPlacementGroups",
            "apiVersion": "2019-03-01",
            "name": "[variables('ppgName')]",
            "location": "[variables('location')]",
            "tags": {},
            "dependsOn": [],
            "properties": {
                "proximityPlacementGroupType": "Standard"
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2019-09-01",
            "condition": "[parameters('publicIp')]",
            "name": "[variables('pipName')]",
            "location": "[variables('location')]",
            "dependsOn": [],
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static",
                "idleTimeoutInMinutes": 4,
                "dnsSettings": {
                    "domainNameLabel": "[variables('hostName')]",
                    "fqdn": "[concat(variables('hostName'), '.', variables('location'), '.cloudapp.azure.com')]"
                },
                "ipTags": []
            }
        },
        {
            "type": "Microsoft.Compute/availabilitySets",
            "apiVersion": "2019-03-01",
            "name": "[variables('avsetName')]",
            "location": "[variables('location')]",
            "tags": {},
            "dependsOn": [
                "[variables('ppgName')]"
            ],
            "sku": {
                "name": "Aligned"
            },
            "properties": {
                "platformFaultDomainCount": 2,
                "platformUpdateDomainCount": 5,
                "proximityPlacementGroup": {
                    "id": "[resourceId(resourceGroup().name, 'Microsoft.Compute/proximityPlacementGroups', variables('ppgName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2019-07-01",
            "name": "[variables('nicName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[variables('pipName')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "type": "Microsoft.Network/networkInterfaces/ipConfigurations",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": "[if(parameters('publicIp'), variables('pipId') , json('null'))]",
                            "subnet": {
                                "id": "[variables('subnetId')]"
                                },
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "networkSecurityGroup": "[if(empty(parameters('networkSecurityGroup')), json('null'), variables('nsgId'))]",
                "enableAcceleratedNetworking": true
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "[variables('diskDeploymentName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri":"[concat(variables('repoPath'), variables('vmDiskTemplate')[parameters('vmSize')][parameters('role')].templateFile)]",
                    "contentVersion":"1.0.0.0"
                },
                "parameters": {
                    "location": {
                        "value": "[variables('location')]"
                    },
                    "hostName": {
                        "value": "[variables('hostName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-03-01",
            "name": "[variables('hostName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[variables('nicName')]",
                "[variables('avsetName')]",
                "[variables('diskDeploymentName')]"
            ],
            "tags": {},
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "name": "[concat(variables('hostName'), '-os-disk1')]",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "[variables('storageSku')]"
                        },
                        "diskSizeGb": 128
                    },
                    "imageReference": {
                        "publisher": "SUSE",
                        "offer": "SLES-SAP",
                        "sku": "12-sp4",
                        "version": "latest"
                    },
                    "copy": [
                        {
                            "name": "dataDisks",
                            "count": "[variables('vmDiskTemplate')[parameters('vmSize')][parameters('role')].diskCount]",
                            "input": {
                                "lun": "[reference(variables('diskDeploymentName')).outputs.diskArray.value[copyIndex('dataDisks')].lun]",
                                "createOption": "attach",
                                "caching": "[reference(variables('diskDeploymentName')).outputs.diskArray.value[copyIndex('dataDisks')].caching]",
                                "writeAcceleratorEnabled": "[reference(variables('diskDeploymentName')).outputs.diskArray.value[copyIndex('dataDisks')].writeAcceleratorEnabled]",
                                "managedDisk": {
                                    "id": "[resourceId(resourceGroup().name, 'Microsoft.Compute/disks', concat(variables('hostName'), '-', reference(variables('diskDeploymentName')).outputs.diskArray.value[copyIndex('dataDisks')].label))]"
                                }
                            }
                        }
                    ]
                },
                "availabilitySet": {
                    "id": "[resourceId(resourceGroup().name, 'Microsoft.Compute/availabilitySets', variables('avsetName'))]"
                },
                "osProfile": {
                    "computerName": "[variables('hostName')]",
                    "adminUsername": "dohughes",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "keyData": "ssh-rsa ",
                                    "path": "/home/dohughes/.ssh/authorized_keys"
                                }
                            ]
                        }
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "https://sapsa1.blob.core.windows.net/"
                    }
                }
            }
        }
    ],
    "outputs": {
        "Resource group": {
            "type": "string",
            "value": "[resourceGroup().name]"
        },
        "VM name": {
            "type": "string",
            "value": "[variables('hostName')]"
        },
        "PPG name": {
            "type": "string",
            "value": "[variables('ppgName')]"
        },
        "AvSet name": {
            "type": "string",
            "value": "[variables('avsetName')]"
        },
        "Role": {
            "type": "string",
            "value": "[parameters('role')]"
        },
        "Number of data disks": {
            "type": "int",
            "value": "[variables('vmDiskTemplate')[parameters('vmSize')][parameters('role')].diskCount]"
        }
    }
}