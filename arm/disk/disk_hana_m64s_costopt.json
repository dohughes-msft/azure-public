{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "hostName": {
            "type": "string"
        }
    },
    "variables": {
        "diskArray": [
            {
                "lun": "0",
                "label": "usrsap-disk1",
                "size": "64",
                "sku": "StandardSSD_LRS",
                "caching": "ReadWrite",
                "writeAcceleratorEnabled": false

            },
            {
                "lun": "1",
                "label": "hanadatalog-disk1",
                "size": "256",
                "sku": "Premium_LRS",
                "caching": "None",
                "writeAcceleratorEnabled": false
            },
            {
                "lun": "2",
                "label": "hanadatalog-disk2",
                "size": "256",
                "sku": "Premium_LRS",
                "caching": "None",
                "writeAcceleratorEnabled": false
            },
            {
                "lun": "3",
                "label": "hanadatalog-disk3",
                "size": "256",
                "sku": "Premium_LRS",
                "caching": "None",
                "writeAcceleratorEnabled": false
            },
            {
                "lun": "4",
                "label": "hanadatalog-disk4",
                "size": "256",
                "sku": "Premium_LRS",
                "caching": "None",
                "writeAcceleratorEnabled": false
            },
            {
                "lun": "5",
                "label": "hanadatalog-disk5",
                "size": "256",
                "sku": "Premium_LRS",
                "caching": "None",
                "writeAcceleratorEnabled": false
            },
            {
                "lun": "6",
                "label": "hanadatalog-disk6",
                "size": "256",
                "sku": "Premium_LRS",
                "caching": "None",
                "writeAcceleratorEnabled": false
            },
            {
                "lun": "7",
                "label": "hanadatalog-disk7",
                "size": "256",
                "sku": "Premium_LRS",
                "caching": "None",
                "writeAcceleratorEnabled": false
            },
            {
                "lun": "8",
                "label": "hanashared-disk1",
                "size": "1024",
                "sku": "StandardSSD_LRS",
                "caching": "ReadOnly",
                "writeAcceleratorEnabled": false
            }                     
        ]
    },
    "resources": [
        {
            "apiVersion": "2019-07-01",
            "type": "Microsoft.Compute/disks",
            "name": "[concat(parameters('hostName'), '-', variables('diskArray')[copyIndex()].label)]",
            "location": "[parameters('location')]",
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                    },
                "diskSizeGB": "[variables('diskArray')[copyIndex()].size]"
            },
            "sku": {
                "name": "[variables('diskArray')[copyIndex()].sku]"
            },
            "tags": {},
            "copy": {
                "name": "diskcopy",
                "count": "[length(variables('diskArray'))]"
            }
        }
    ],
    "outputs": {
        "diskArray": {
            "type": "array",
            "value": "[variables('diskArray')]"
        }
    }
}